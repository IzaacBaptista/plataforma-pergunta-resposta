<%- include('partials/header') %>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container">
        <hr>
        <h1 class="text-center">Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-primary">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta => {
            %>
            <div class="card mt-3">
                <div class="card-header">
                    <h3><%= pergunta.titulo %></h3>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/deletarpergunta.id %>" class="btn btn-danger">Deletar</a>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-text"><%= pergunta.descricao %></h5>
                    <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Ver Respostas</a>
                </div>
            </div>
            <%
        }); %>
    </div>

</body>
<%- include ('partials/footer') %>